<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_auth.ui.LoginActivity">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/app_bar_login"/>

    <ScrollView
        android:layout_below="@+id/app_bar_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/iv_login_activity"
                android:src="@drawable/login_photo"
                android:layout_width="match_parent"
                android:layout_alignParentStart="true"
                android:layout_height="220dp"
                android:scaleType="fitCenter"
                android:layout_alignParentLeft="true" />
            <EditText
                android:layout_below="@+id/iv_login_activity"
                android:id="@+id/et_email_login_activity"
                android:hint="Email...."
                android:background="@drawable/inputs"
                android:padding="4dp"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/email"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                 />
            <EditText
                android:background="@drawable/inputs"
                android:layout_below="@+id/et_email_login_activity"
                android:id="@+id/et_password_login_activity"
                android:hint="Password...."
                android:padding="4dp"
                android:inputType="textPassword"
                android:drawableStart="@drawable/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/password"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                 />
            <TextView
                android:layout_below="@+id/et_password_login_activity"
                android:id="@+id/tv_forgot_password_login_activity"
                android:text="Forgot Password"
                android:padding="4dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:gravity="end" />
            <Button
                android:layout_below="@+id/tv_forgot_password_login_activity"
                android:id="@+id/bt_longin_login_activity"
                android:padding="4dp"
                android:text="Login"
                android:textStyle="bold"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:textSize="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                />
            <TextView
                android:layout_below="@+id/bt_longin_login_activity"
                android:id="@+id/tv_create_new_login_activity"
                android:text="Create new  Account"
                android:padding="4dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:gravity="end" />
            <TextView
                android:layout_below="@+id/tv_create_new_login_activity"
                android:id="@+id/tv_login_using_login_activity"
                android:text="or login using"
                android:padding="4dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:gravity="end" />

            <Button
                android:layout_below="@+id/tv_login_using_login_activity"
                android:id="@+id/bt_longin_useingPhone_login_activity"
                android:padding="4dp"
                android:text="Phone"
                android:textStyle="bold"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:drawableStart="@drawable/phone"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:drawableLeft="@drawable/phone" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>